@page "/tareanueva"
@using BlazorAppAdminTareas.Contracts
@using BlazorAppAdminTareas.Entities
@inject ITareasService TareasService
@inject NavigationManager Navigation

<h3>Nueva Tarea</h3>

<EditForm Model="nuevaTarea" OnValidSubmit="AgregarTarea">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="titulo" class="form-label">Título</label>
        <InputText id="titulo" class="form-control" @bind-Value="nuevaTarea.Titulo" />
    </div>

    <div class="mb-3">
        <label for="descripcion" class="form-label">Descripción</label>
        <InputTextArea id="descripcion" class="form-control" @bind-Value="nuevaTarea.Descripcion" />
    </div>

    <button type="submit" class="btn btn-primary">Agregar Tarea</button>
</EditForm>

@code {
    private LasTareas nuevaTarea = new LasTareas();

    private async Task AgregarTarea()
    {
        await TareasService.AgregarTareaAsync(nuevaTarea);
        Navigation.NavigateTo("/tareas");
    }
}
